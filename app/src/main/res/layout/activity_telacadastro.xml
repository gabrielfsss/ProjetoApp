<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".telacadastro"
    android:background="@drawable/telainiciabackground">

    <RelativeLayout
        android:layout_width="382dp"
        android:layout_height="638dp"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textcadastro"
            android:layout_width="161dp"
            android:layout_height="53dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="Cadastro" />

        <TextView
            android:id="@+id/textnomeprod"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/textcadastro"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:text="Nome do produto: " />

        <TextView
            android:id="@+id/textestoqueprod"
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:layout_below="@+id/textnomeprod"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:text="Quantidade no estoque: " />

        <TextView
            android:id="@+id/textprecoprod"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_below="@+id/textestoqueprod"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:text="PreÃ§o por unidade: " />

        <TextView
            android:id="@+id/textvalorestoque"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_below="@+id/textlocalprod"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:text="Valor do estoque: " />

        <TextView
            android:id="@+id/textlocalprod"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:layout_below="@+id/textprecoprod"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:text="Local do produto: " />

        <EditText
            android:id="@+id/editnome"
            android:layout_width="186dp"
            android:layout_height="32dp"
            android:layout_below="@+id/textcadastro"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@+id/textnomeprod"
            android:ems="10"
            android:hint="Ex: Jorge da Silva Mendes"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editquantestoq"
            android:layout_width="186dp"
            android:layout_height="32dp"
            android:layout_below="@+id/editnome"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@+id/textnomeprod"
            android:ems="10"
            android:hint="Ex: 204"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/editprecounid"
            android:layout_width="186dp"
            android:layout_height="32dp"
            android:layout_below="@+id/editquantestoq"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@+id/textnomeprod"
            android:ems="10"
            android:hint="Ex: 15.90"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/editlocalprod"
            android:layout_width="186dp"
            android:layout_height="32dp"
            android:layout_below="@+id/editprecounid"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@+id/textnomeprod"
            android:ems="10"
            android:hint="Ex: Rua Jarbas Passarinho Bairro Tancredo Neves"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textvalortotalestoque"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:layout_below="@+id/editlocalprod"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@+id/textnomeprod"
            android:gravity="center"
            android:text="valor" />

        <Button
            android:id="@+id/btnpolimorf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textvalortotalestoque"
            android:layout_marginLeft="41dp"
            android:layout_marginTop="52dp"
            android:layout_toRightOf="@+id/textvalortotalestoque"
            android:text="polimorf"


            />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>